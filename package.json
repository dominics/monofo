{
  "name": "monofo",
  "version": "0.0.1",
  "description": "Buildkite pipeline helper",
  "main": "build/index.js",
  "bin": {
    "monofo": "build/src/index.js"
  },
  "typings": "build/src/index.d.ts",
  "repository": "https://github.com/dominics/monofo",
  "license": "GPL-3.0-or-later",
  "keywords": ["buildkite"],
  "scripts": {
    "describe": "npm-scripts-info",
    "build": "tsc -p tsconfig.json",
    "build:watch": "run-s \"build -- -w\"",
    "commit": "git-cz",
    "info": "npm-scripts-info",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "run-s \"lint -- --fix\"",
    "test": "jest",
    "test:watch": "run-s \"test -- --watch\"",
    "version": "standard-version",
    "clean": "rm -rf build",
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('yarn') === -1) throw new Error('monofo must be installed with Yarn: https://yarnpkg.com/')\""
  },
  "engines": {
    "node": ">=12.10"
  },
  "dependencies": {
    "debug": "4.1.1",
    "js-yaml": "3.14.0",
    "lodash": "4.17.13"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "2.24.0",
    "@typescript-eslint/parser": "2.34.0",
    "@types/debug": "4.1.5",
    "@types/jest": "25.2.3",
    "@types/lodash": "4.14.151",
    "cz-conventional-changelog": "2.1.0",
    "jest": "26.0.1",
    "jest-fetch-mock": "3.0.3",
    "npm-run-all": "4.1.5",
    "standard-version": "6.0.1",
    "typescript": "3.9.5",
    "ts-jest": "26.0.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb-typescript": "7.2.1",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jest": "23.13.1",
    "eslint-plugin-prettier": "3.1.3",
    "prettier": "2.0.5"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  }
}
